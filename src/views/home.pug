doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Noom 
		link(rel="stylesheet", href="https://unpkg.com/mvp.css")
	body 
		header
			h1 Noom 
		main
			div#roomList
				h4 Open Room List
				ul 
			div#welcome 
				form
					input(type="text", placeholder="Chatting Room Name", required)
					button Enter Chatting Room 
			div#nickname 
				form
					input(type="text", placeholder="NickName", required)
					button Save 
			div#message
				h3 
				ul 
				form
					input(type="text", placeholder="Message", required)
					button Send 
			hr
			div#videoArea
				form
					input(type="text", placeholder="Video Room Name", required) 
					button Enter Video Room
			div#videoCall
				div#videoStream
					video#myVideo(autoplay, playsinline, width="400" height="400")
					button#mute Muted 
					button#camera Turn Camera Off
					select#cameras
		script(src="/socket.io/socket.io.js") 
		script(src="/public/js/app.js")